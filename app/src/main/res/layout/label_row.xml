<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/label_row_layout_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="finish"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/label_name"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        android:layout_weight=".25"
        android:textAlignment="textStart"
        android:textSize="20sp"
        tools:text="Label" />

    <Button
        android:id="@+id/label_delete_button"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:contentDescription="@string/labelsDeleteLabel"
        android:onClick="deleteLabel"
        android:tooltipText="@string/labelsDeleteLabel"
        app:icon="@drawable/ic_outline_delete_forever_24" />

</LinearLayout>